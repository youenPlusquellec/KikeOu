<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.enssat.kikeou.pepin_plestan_plusquellec">
    <!-- Permission declarations -->
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:name=".AppApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.KikeOu">
        <activity
            android:name=".activity.QRCodeGenActivity"
            android:exported="true" />
        <activity
            android:name=".activity.ProfilePictureActivity"
            android:exported="false" />
        <activity
            android:name=".activity.ProfileDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".activity.AddLocalisationActivity"
            android:exported="false" />
        <activity
            android:name=".activity.AddContactActivity"
            android:exported="false" />
        <activity
            android:name=".activity.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.CameraActivity" />
    </application>

</manifest>